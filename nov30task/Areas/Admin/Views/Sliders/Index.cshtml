@model List<SliderListItemVM>
@{
    ViewData["Title"] = "Slider";
}
@section styles{
    <link href="~/Admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}
@section scripts{
    <script src="~/Admin/js/demo/datatables-demo.js"></script>
    @if (TempData["SliderDeletionResponse"] != null)
    {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        @if ((bool)TempData["SliderDeletionResponse"] == true)
        {
            <script>
                Swal.fire({
                    position: "top-end",
                    icon: "success",
                    title: "Melumat ugurla silindi",
                    showConfirmButton: false,
                    timer: 1500
                });
            </script>
        }
        else
        {
            <script>
                Swal.fire({
                    position: "top-end",
                    icon: "error",
                    title: "Xeta",
                    showConfirmButton: false,
                    timer: 1500
                });
            </script>
        }
    }
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Sliders</h6>
        <a href="/Admin/Sliders/Create" class="btn btn-outline-success">Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <th>Title</th>
                <th>Text</th>
                <th>Image</th>
                <th>Position</th>
                <th>ButtonText</th>
                <th colspan="2">Action</th>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Text</td>
                                <td><img width="200" src="@item.ImageUrl" /></td>
                                <td>@(item.IsLeft == true ? "left" : "right")</td>
                                <td>@item.ButtonText</td>
                                <td class="text-center"><a class="btn btn-outline-info" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                                <td class="text-center"><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                            </tr>
                        }
                    }
                    else{
                        <tr>
                            <td class="text-center" colspan="6">Zero data</td>
                        </tr>
                    }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>