@model IEnumerable<SliderListItemVM>
@{
    ViewData["Title"] = "Slider";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Sliders</h6>
        <a asp-action="Create" class="btn btn-outline-success">Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Text</th>
                        <th>Image</th>
                        <th>Position</th>
                        <th>ButtonText</th>
                        <th colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Text</td>
                                <td><img width="200" src="@item.ImageUrl" /></td>
                                <td>@(item.Position == false ? "Left" : "Right")</td>
                                <td>@item.ButtonText</td>
                                <td class="text-center"><a class="btn btn-outline-info" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                                <td class="text-center"><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                            </tr>
                        }
                    }
                    else{
                        <tr>
                            <td class="text-center" colspan="6">Zero data</td>
                        </tr>
                    }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>