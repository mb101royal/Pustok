@model SliderUpdateVM
@{
    ViewData["Title"] = "Update";
}
@section styles{
    <link href="~/Admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}
@section scripts{
    <script src="~/Admin/js/demo/datatables-demo.js"></script>
}
@if (TempData["SliderRenovationResponse"] != null)
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if ((bool)TempData["SliderRenovationResponse"] == true)
    {
        <script>
            Swal.fire({
                position: "top-end",
                icon: "success",
                title: "Melumat ugurla yenilendi",
                showConfirmButton: false,
                timer: 1500
            });
        </script>
    }
    else
    {
        <script>
            Swal.fire({
                position: "top-end",
                icon: "error",
                title: "Xeta",
                showConfirmButton: false,
                timer: 1500
            });
        </script>
    }
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Update Slider</h6>
    </div>
    <div class="card-body">
        <form asp-action="Update" method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text"></label>
                <input asp-for="Text" class="form-control">
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control">
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ButtonText"></label>
                <input asp-for="ButtonText" class="form-control">
                <span asp-validation-for="ButtonText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="right">Right</label>
                <input asp-for="Position" value="0" type="radio" id="right">
                <label for="left">Left</label>
                <input asp-for="Position" value="1" type="radio" id="left">
                <br />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <button class="btn btn-success">Submit!</button>
        </form>
    </div>
</div>

