@model IEnumerable<BookListItemVM>
@{
    ViewData["Title"] = "Index";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Books</h6>
        <a asp-action="Create" class="btn btn-outline-success">Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>About</th>
                        <th>Description</th>
                        <th>SellPrice</th>
                        <th>CostPrice</th>
                        <th>Discount</th>
                        <th>Quantity</th>
                        <th>Category</th>
                        <th>Image</th>
                        <th colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>

                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr class='@(item.IsDeleted == true ? "bg-danger text-white" : "")'>
                                <td>@item.Name</td>
                                <td>@item.About</td>
                                <td>@item.Description</td>
                                <td>@item.SellPrice</td>
                                <td>@item.CostPrice</td>
                                <td>@item.Discount</td>
                                <td>@item.Quantity</td>
                                <td>@item.Category?.Name</td>
                                <td><img width="200" src="@item.ImageUrl" /></td>
                                <td class="text-center"><a class="btn btn-outline-info" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                                <td class="text-center"><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="text-center" colspan="12">Zero data</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>