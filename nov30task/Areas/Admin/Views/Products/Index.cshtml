@using nov30task.Areas.Admin.ViewModels
@model IEnumerable<AdminProductListItemVM>
@{
    ViewData["Title"] = "Index";
}
@section styles{
    <link href="~/Admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}
@section scripts{
    <script src="~/Admin/js/demo/datatables-demo.js"></script>
}
@if (TempData["ProductDeletionResponse"] != null)
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if ((bool)TempData["ProductDeletionResponse"] == true)
    {
        <script>
            Swal.fire({
                position: "top-end",
                icon: "success",
                title: "Melumat ugurla silindi",
                showConfirmButton: false,
                timer: 1500
            });
        </script>
    }
    else
    {
        <script>
            Swal.fire({
                position: "top-end",
                icon: "error",
                title: "Xeta",
                showConfirmButton: false,
                timer: 1500
            });
        </script>
    }
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Products</h6>
        <a asp-action="Create" class="btn btn-outline-success">Create</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <th>Name</th>
                <th>About</th>
                <th>Description</th>
                <th>ExTax</th>
                <th>Brand</th>
                <th>ProductCode</th>
                <th>RewardPoints</th>
                <th>Avability</th>
                <th>SellPrice</th>
                <th>CostPrice</th>
                <th>Discount</th>
                <th>Quantity</th>
                <th>Category</th>
                <th colspan="2">Action</th>
                </thead>
                <tbody>

                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr class='@(item.IsDeleted ? "bg-danger text-white" : "")'>
                                <td>@item.Name</td>
                                <td>@item.About</td>
                                <td>@item.Description</td>
                                <td>@item.ExTax</td>
                                <td>@item.Brand</td>
                                <td>@item.ProductCode</td>
                                <td>@item.RewardPoints</td>
                                <td>@item.Avability</td>
                                <td>@item.SellPrice</td>
                                <td>@item.CostPrice</td>
                                <td>@item.Discount</td>
                                <td>@item.Quantity</td>
                                <td>@item.Category?.Name</td>
                                <td class="text-center"><a class="btn btn-outline-info" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                                <td class="text-center"><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="text-center" colspan="15">Zero data</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>